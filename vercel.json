{
  "version": 2,
  "public": true,
  "outputDirectory": ".",
  "headers": [
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|svg|webp|gif|ico|woff2|woff|ttf|json)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=604800, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=2592000, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}

